@model IEnumerable<Case3.FEWebwinkel.Site.ViewModels.CatalogusViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Catalogus</h2>

<div class="catalog-section">
    @foreach (var item in Model)
    {
        <div class="catalog-product">
            @using (Html.BeginForm("Index", "Catalogus", FormMethod.Post))
            {
                <div class="product-top">
                    <div class="img-wrapper" style="background-image:url(../Content/Product_img/julianax_r_02_yellow_small.gif)">

                    </div>
                    <div class="info-wrapper">
                        <p>
                            @Html.DisplayFor(modelItem => item.Naam)
                            @Html.HiddenFor(modelItem => item.Naam)
                        </p>
                        <p>

                            @Html.DisplayFor(modelItem => item.Leverancier)
                            @Html.HiddenFor(modelItem => item.Leverancier)
                        </p>
                        <p>
                            &#8364 @Html.DisplayFor(modelItem => item.Prijs)
                                    @Html.HiddenFor(modelItem => item.Prijs)
                        </p>
                        <p>
                            10 in voorraad
                        </p>
                    </div>
                </div>


                <div class="product-bottom">
                    <input type="submit" name="AddToWinkelmandKnop" value="Aan winkelmand toevoegen" /> <!--<a href="http://asp.net" class="btn btn-primary">Aan winkelmand toevoegen</a>-->
                </div>
            }
        </div>
    }

</div>
