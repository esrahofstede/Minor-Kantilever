@model IEnumerable<Case3.FEWebwinkel.Site.ViewModels.CatalogusViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Catalogus</h2>

<div class="catalog-section">
    @foreach (var item in Model)
    {
        <div class="catalog-product">
            
            <div class="product-top">
                <div class="img-wrapper" style="background-image:url(@item.Afbeeldingslocatie)">
                    
                </div>
                <div class="info-wrapper">
                    <p>
                        @Html.DisplayFor(modelItem => item.Naam)
                    </p>
                    <p>
                        @Html.DisplayFor(modelItem => item.Leverancier)
                    </p>
                    <p>
                        &#8364 @Html.DisplayFor(modelItem => item.Prijs)
                    </p>
                    <p>
                        @Html.DisplayFor(modelItem => item.Voorraad) in voorraad
                    </p>
                </div>
            </div>

            <div class="product-bottom">
                <a href="http://asp.net" class="btn btn-primary">Aan winkelmand toevoegen</a>
            </div>
            
        </div>
    }

</div>
