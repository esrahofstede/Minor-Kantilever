@model IEnumerable<Case3.BSCatalogusBeheer.Schema.Product.Product>

@{
    ViewBag.Title = "Index";
}

<h2>Catalogus</h2>

<div class="catalog-section">
    @foreach (var item in Model)
    {
        <div class="catalog-product">
            <form action="AddToWinkelmand" method="post">
                <div class="product-top">
                    <div class="img-wrapper" style="background-image:url(../Content/Product_img/julianax_r_02_yellow_small.gif)">

                    </div>
                    <div class="info-wrapper">
                        <p>
                            @Html.DisplayFor(modelItem => item.Naam)
                        </p>
                        <p>

                            @Html.DisplayFor(modelItem => item.LeverancierNaam)
                        </p>
                        <p>
                            &#8364 @Html.DisplayFor(modelItem => item.Prijs)
                        </p>
                        <p>
                            10 in voorraad
                        </p>
                    </div>
                </div>


                <div class="product-bottom">
                    <input type="submit" name="AddToWinkelmandKnop" value="Aan winkelmand toevoegen" /> <!--<a href="http://asp.net" class="btn btn-primary">Aan winkelmand toevoegen</a>-->
                </div>
            </form>
        </div>
    }

</div>
